<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <h1>Change Password</h1>

    <form class="" action="/user/changePassword" method="post">
      <div>
        <label for="oldPassword">Old Password</label>
        <input type="text" id="oldPassword" name="oldPassword" required>
      </div>

      <div>
        <label for="newPassword">New Password</label>
        <input type="newPassword" id="newPassword" name="newPassword" required>
      </div>
      <div>
        <label for="newPassword2">Confirm Password</label>
        <input type="newPassword2" id="newPassword2" name="newPassword2" required>
      </div>
      <button type="submit">Change Password</button>
    </form>
    <br>
    <ul style="list-style: none;">
      <% for(var i=0; i<errors.length; i++) { %>
        <li style="color:red">
          <%= errors[i].msg %>
        </li>
      <% } %>
    </ul>
    <a href='#' onclick="history.back()">Back</a>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
