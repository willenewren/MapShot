<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head'); %>
    <style>
    body, html {
  		height: 100%
  		margin: 0;
  	}
  	#bg{
  		width: 100%;
  		height: 100%;
  		background-image: linear-gradient(to bottom right, Teal, YellowGreen);
  		position: fixed;
  		left: 0px;
  		top: 0px;
  		z-index: -1;

  	}
  	h1{
  		text-align: center;
  	}
  	div.rcorners {
  		position: relative;
          background: #FFFFFF;
  		margin: auto;
          margin-top: 150px;
  		border-radius: 25px;
  		border: 2px solid #FFFFFF;
  		padding: 20px;
  		width: 60%;
  		height: 60%;
  	}

  	input[type=text]{
      	-webkit-border-radius: 20px;
      	-moz-border-radius: 20px;
       	border-radius: 20px;
          box-shadow: 1px 1px 5px #555 inset;
       	border: 1px solid #FFFFFF;
       	color: #a0d18c;
       	width: 250px;
       	height: 30px;
       	padding-left: 10px;
       	margin-bottom: 20px;
      }
  	input[type=password]{
      	-webkit-border-radius: 20px;
      	-moz-border-radius: 20px;
       	border-radius: 20px;
          box-shadow: 1px 1px 5px #555 inset;
       	border: 1px solid #FFFFFF;
       	color: #a0d18c;
       	width: 250px;
       	height: 30px;
          padding-left: 10px;
       	margin-bottom: 20px;

      }
      div.c1{

       	width: 250px;
       	height: 30px;
          float: left;
          margin-left: 15px;
      }
      div.c2{

       	width: 250px;
       	height: 20px;
          float: right;
          margin-right: 15px;
      }
      button[type=submit]{
      	font-size: 17px;
      	color: White;
      	height: 35px;
          width: 165px;
          border: none;
         	float: right;
  		margin-bottom: 20px;
  		border-radius: 20px;
          background-image: linear-gradient(to bottom right, #D0FAD0, YellowGreen);
  	}
      div.signin{
      	font-size: 17px;
      	color: DimGrey;
      	margin-top: 5px;
      	float:right
      }
    </style>
  </head>
  <body>
    <div id="bg">
    </div>
    <div class="rcorners">
      <h1>MapShot</h1>
      <form class="" action="/user/register" method="post">

        <!--1st collumn of fields -->
        <div class="c1">
        <div>
          <label for="name"></label>
          <input type="text"  id="name" placeholder="First Name" name="firstname" required>
        </div>

        <div>
          <label for="username"></label>
          <input type="text"  id="username" placeholder="Username" name="username" required>
        </div>

        <div>
          <label for="password"></label>
          <input type="password"  id="password" placeholder="Password" name="password" required>
        </div>

        <div>
          <input type="text"  placeholder="Re-enter Password" name="password2" required>
        </div>
        </div>

        <!--2nd collumn of fields -->
        <div class="c2">
          <div>
          <label></label>
          <input type="text" placeholder="Last Name" name="lastname" required>
          </div>

          <div>
          <label for="email"></label>
          <input type="text" id="email" placeholder="Email@domain.com" name="email" required>
          </div>

          <button type="submit">Create Account</button>
        </form>
          <div class="signin">
            <label>Already Have One?
            <a href="/login">Sign In</a>
            </label>
          </div>
          <ul style="list-style: none;">
            <% for(var i=0; i<errors.length; i++) { %>
              <li style="color:red">
                <%= errors[i].msg %>
              </li>
            <% } %>
          </ul>
        </div>

      <br>
    </div>



    <footer><%- include('../partials/footer') %></footer>
  </body>
</html>
