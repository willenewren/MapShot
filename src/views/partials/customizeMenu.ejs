<!-- menu for customize map screen -->

<div class="dynamic-sidebar" id="customizeSidebar">
  <div class="menu-toggle" onclick="toggleMenu()">
    <i class="fas fa-caret-left"></i>
  </div>
  <div class="menu-content">
    <div id="options">
      <div>
        <span><i class="fas fa-palette"></i></span>
        <select id="styleTemplate" onchange="changeMapStyles()" class="form-control">
          <option value="standard">Standard</option>
          <option value="silver">Silver</option>
          <option value="retro">Retro</option>
          <option value="dark">Dark</option>
          <option value="night">Night</option>
          <option value="aubergine">Aubergine</option>
        </select>
        <br>
      </div>
      <br><br>
      <div>
        <span><i class="fas fa-road"></i>
        <select id="roadVisible" onchange="changeMapStyles()" class="form-control">
          <option value="on">On</option>
          <option value="simplified">Simplified</option>
          <option value="off">Off</option>
        </select>
        <br>
      </div>
      <div>
        <p>T</p>
        <select id="labels" onchange="changeMapStyles()" class="form-control">
          <option value="on">On</option>
          <option value="simplified">Simplified</option>
          <option value="off">Off</option>
        </select>
        <br>
      </div>
      <div>
        <span><i class="fas fa-mountain"></i></span>
        <select id="landmarks" onchange="changeMapStyles()" class="form-control">
          <option value="on">On</option>
          <option value="simplified">Simplified</option>
          <option value="off">Off</option>
        </select>
        <br>
      </div>
    </div>
    <a href="#" class="btn btn-large" onclick="saveStyle()">Save</a>
  </div>
</div>
